<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/app_background_dk">

    <LinearLayout
        android:id="@+id/player_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="#D3243A44"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/player_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:src="@drawable/back"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/player_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/player_header"
        android:layout_above="@id/player_footer"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/album_poster8" />

    <LinearLayout
        android:id="@+id/player_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:background="#D3243A44"
        android:weightSum="3">

        <ProgressBar
            android:id="@+id/player_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:progressTint="@color/white"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/player_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                app:srcCompat="@drawable/player_repeat" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                app:srcCompat="@drawable/exo_controls_previous" />

            <ImageButton
                android:id="@+id/player_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:src="@drawable/player_play" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                app:srcCompat="@drawable/exo_controls_next" />

            <ImageButton
                android:id="@+id/player_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                app:srcCompat="@drawable/player_shuffle" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/player_track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_header"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/player_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/player_album"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="TextView" />

    <TextView
        android:id="@+id/player_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/player_footer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="TextView" />

</RelativeLayout>