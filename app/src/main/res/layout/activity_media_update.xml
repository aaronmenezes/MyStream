<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.MediaUpdate"
    style="@style/app_background_dk">

    <TextView
        android:id="@+id/scrn_title_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Update Media"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/type_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrn_title_lbl"
        android:layout_alignLeft="@id/scrn_title_lbl"
        android:text="Select media type"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/type_lbl"
        android:layout_toEndOf="@id/type_lbl"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/title_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_lbl"
        android:layout_alignLeft="@id/type_lbl"
        android:text="Enter media title"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_alignBaseline="@id/title_lbl"
        android:layout_alignLeft="@id/category_spinner"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/find_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="153dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Find Media"
        android:background="@drawable/action_button"/>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_below="@id/find_btn"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/result_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/div"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:paddingEnd="10dp"/>

    <ImageButton
        android:id="@+id/set_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/div"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/arrow_right"
        android:background="@color/app_bg_dk"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/poster_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/result_spinner"
        android:layout_above="@id/btn_update"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        app:srcCompat="@drawable/poster_unavailable" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/action_button"
        android:textColor="@color/white"
        android:text="Reset poster" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/action_button"
        android:textColor="@color/white"
        android:text="Update Poster" />

    <ImageView
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/btn_update"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/gallery" />

</RelativeLayout>