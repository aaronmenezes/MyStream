<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:clickable="true">


    <ImageView
        android:id="@+id/album_syn_poster"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/album_poster5" />

    <TextView
        android:id="@+id/album_syn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/album_syn_poster"
        android:layout_alignTop="@id/album_syn_poster"/>

    <TextView
        android:id="@+id/album_syn_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/album_syn_poster"
        android:layout_below="@id/album_syn_title"/>

    <TextView
        android:id="@+id/album_syn_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/album_syn_poster"
        android:layout_below="@id/album_syn_artist"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/album_syn_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/album_syn_poster"
        android:layout_below="@id/album_syn_artist" />

    <Button
        android:id="@+id/play_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@id/album_syn_poster"
        android:layout_toRightOf="@id/album_syn_poster"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/album_syn_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_below="@id/album_syn_poster"
        android:scrollbars="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CD326780"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/player_poster"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/album_poster5"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_poster"
            android:orientation="vertical">

            <TextView
                android:id="@+id/audio_file_url_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp" />

            <Button
                android:id="@+id/start_audio_in_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Play Audio In Background Service"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/pause_audio_in_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pause Audio In Background Service"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/stop_audio_in_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop Audio In Background Service"
                android:textAllCaps="false"/>

            <ProgressBar
                android:id="@+id/play_audio_in_background_service_progressbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>