<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_featured"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/app_background_dk"
    android:orientation="vertical">


        <ScrollView
            android:id="@+id/main_content_scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#4D2196F3" >

                        <ImageButton
                            android:id="@+id/history_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_bg"
                            app:srcCompat="@drawable/menu_list" />

                        <TextView
                            android:id="@+id/btn_movie"
                            android:paddingLeft="20dp"
                            android:paddingVertical="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="Movies"
                            android:background="@drawable/button_bg"
                            android:fontFamily="@font/montserrat_light"/>

                        <TextView
                            android:id="@+id/btn_tv"
                            android:paddingLeft="20dp"
                            android:paddingVertical="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="TV"
                            android:background="@drawable/button_bg"
                            android:fontFamily="@font/montserrat_light"/>

                        <TextView
                            android:id="@+id/btn_music"
                            android:paddingLeft="20dp"
                            android:paddingVertical="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="Music"
                            android:background="@drawable/button_bg"
                            android:fontFamily="@font/montserrat_light"/>

                        <TextView
                            android:id="@+id/btn_radio"
                            android:paddingLeft="20dp"
                            android:paddingVertical="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="Radio"
                            android:background="@drawable/button_bg"
                            android:fontFamily="@font/montserrat_light"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/header_div"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFFFFF"
                        android:layout_marginTop="1dp"/>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/carousel"
                        android:layout_width="match_parent"
                        android:layout_height="260dp" />

                    <TextView
                        android:id="@+id/movie_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_movie_lbl"
                        android:textColor="@color/white"
                        android:layout_below="@id/carousel"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feature_movie_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/more_lbl"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/movie_div"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_below="@id/feature_movie_list"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/tv_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_tv_lbl"
                        android:textColor="@color/white"
                        android:layout_below="@id/movie_div"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feature_tv_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_lbl"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:id="@+id/tv_div"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_below="@id/feature_tv_list"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/audio_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_audio_lbl"
                        android:textColor="@color/white"
                        android:layout_below="@id/tv_div"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_light"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feature_audio_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/audio_lbl"
                        android:layout_marginTop="10dp"/>
            </LinearLayout>

        </ScrollView>
        <fragment
            android:id="@+id/featured_synopsis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:name="com.kyser.demosuite.view.ui.Synopsis" />

        <fragment
            android:id="@+id/album_sysnopsis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:name="com.kyser.demosuite.view.ui.AlbumSynopsis"/>

        <RelativeLayout
            android:id="@+id/navbar_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/navbar"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            style="@style/app_background_dk"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:animateLayoutChanges="true">

            <RelativeLayout
                android:id="@+id/profile_stage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/profile_stage">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/user_picture"
                    android:paddingStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/profile_picture"
                    android:layout_toRightOf="@id/profile_picture"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/user_name"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_light"/>

            </RelativeLayout>

            <View
                android:id="@+id/div1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/profile_stage"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/movie_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/div1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Movie history"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/montserrat_light"/>

            <View
                android:id="@+id/div2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/movie_history"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_history"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="TV history"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/montserrat_light"/>

            <View
                android:id="@+id/div3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/tv_history"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/album_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_history"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Album history"
                android:background="@drawable/button_bg"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_light"/>

            <View
                android:id="@+id/div4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/album_history"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/update_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/album_history"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Update Media"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/montserrat_light"/>

            <View
                android:id="@+id/div5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/update_media"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/gmap_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/update_media"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Google Map Demo"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/montserrat_light"
                android:visibility="gone"/>

            <View
                android:id="@+id/div6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/gmap_demo"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/app_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gmap_demo"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Application Website"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/montserrat_light"/>

            <View
                android:id="@+id/div7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/app_demo"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/insights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_demo"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Usage Statistics"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/montserrat_light"/>

            <View
                android:id="@+id/div8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_below="@id/insights"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/version_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Version"
                android:fontFamily="@font/montserrat_light"/>

        </RelativeLayout>

    <WebView
        android:id="@+id/portal_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/profile_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="200dp"
        android:background="@drawable/profile_panel"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/panel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cancel"
            android:background="@drawable/button_bg"
            android:layout_alignParentRight="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/panel_profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black_overlay"/>

        <TextView
            android:id="@+id/panel_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel_profile_picture"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/user_name"
            android:textColor="@color/black_overlay"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_light"/>

        <TextView
            android:id="@+id/panel_profile_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel_profile_name"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black_overlay"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_light"/>

        <Button
            android:id="@+id/panel_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/panel_profile_mail"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Sign out"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/white"
            android:background="@drawable/action_button"/>

    </RelativeLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:padding="0dp"
            app:srcCompat="@drawable/featured_placeholder" />
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>